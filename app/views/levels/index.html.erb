<%= form_for @level , :html => {:id => "level_forms"}  do |f| %>
	<div class="form-group">
		<%= f.label :levelname, "Level Name :" %>
		<%= f.text_field :name , :class => "form-control" , :placeholder => "Level Name" %>
	</div>
	<div class="form-group">
		<%= fields_for @subjects do |s| %>
			<%= s.label :subjectname , "Subjects :" %>
			<%= s.text_area :name , :class => "form-control" , rows: 3, :placeholder => "Add Subjects comma separated" %>
		<% end %>
	</div>
	<%= f.submit :Create , :class => "btn btn-primary" %>
<% end %>
